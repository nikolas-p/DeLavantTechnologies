@using DeLavantTechnologies.Data
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject NavigationManager NavigationManager
@inject UiState Ui

<nav class="nav-panel">
    <AuthorizeView>
        <Authorized>
            @if (context.User.IsInRole("Admin"))
            {
                <AuthAdminNavMenu/>

             <div class="nav-link" style="--gradient: var(--primary-gray);">
                 <span class="square-icon gear-fill-icon"></span>
                 <span class="nav-text">@context.User.Identity?.Name</span>
             </div>
            }

            @{
                var destination = EntityNavDefinitions.EntityNavMap[EntityType.DestinationCourses];

                <div class="nav-link" style="@destination.Style" @onclick="() => Select(EntityType.DestinationCourses)">
                    <span class="square-icon @destination.IconClass"></span>
                    <span class="nav-text">@destination.Title</span>
                </div>
            }

            <form action="Account/Logout" method="post">
                <AntiforgeryToken />
                <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                <button type="submit" class="nav-link" style="--gradient: var(--primary-red);">
                    <span class="square-icon box-arrow-left-icon"></span>
                    <span class="nav-text">Выйти</span>
                </button>
            </form>
        </Authorized>
    </AuthorizeView>
</nav>

@code {
    void Select(EntityType entity)
    {
        Ui.SelectEntity(entity);
    }

    private string? currentUrl = "";
}
