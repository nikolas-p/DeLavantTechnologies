@using Microsoft.AspNetCore.Components

<input type="text" @bind="Search" @bind:event="oninput" placeholder="Поиск..." />

@code {
    private string search = "";

    [Parameter]
    public string Search
    {
        get => search;
        set
        {
            if (search != value)
            {
                search = value;
                SearchChanged.InvokeAsync(search);
            }
        }
    }

    [Parameter]
    public EventCallback<string> SearchChanged { get; set; }
}
